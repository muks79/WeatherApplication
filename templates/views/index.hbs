<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Weather App</title>
    <link rel="stylesheet" href="styles.css" />
    <style>
     body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f5f5f5;
    color: #333;
}

header {
    background-color: #3498db;
    color: white;
    text-align: center;
    padding: 20px 0;
}

.search-box {
    margin-top: 10px;
    display: flex;
    justify-content: center;
    align-items: center;
}

input[type="text"] {
    padding: 10px;
    font-size: 16px;
    border: none;
    border-radius: 5px 0 0 5px;
    width: 70%;
}

button {
    padding: 10px 15px;
    font-size: 16px;
    background-color: #2ecc71;
    color: white;
    border: none;
    cursor: pointer;
    border-radius: 0 5px 5px 0;
    width: 30%;
}

button:hover {
    background-color: #27ae60;
}

main {
    max-width: 800px;
    margin: 20px auto;
}

.weather-card {
    background-color: #fff;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    padding: 20px;
    text-align: center;
}

.location h2 {
    margin: 0;
    color: #3498db;
}

.temperature img {
    width: 50px;
}

.temperature h1 {
    font-size: 36px;
    color: #e74c3c;
    margin: 10px 0;
}

.description p {
    margin: 10px 0;
    color: #666;
}

.forecast {
    margin-top: 20px;
}

.forecast h2 {
    color: #3498db;
}

.forecast-day {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: #ecf0f1;
    padding: 15px;
    margin: 10px 0;
    border-radius: 10px;
}

.forecast-day img {
    width: 40px;
    margin-bottom: 10px;
}

.forecast-day p {
    margin: 0;
}

/* Responsive Design */

@media only screen and (max-width: 600px) {
    .search-box {
        flex-direction: column;
        align-items: stretch;
    }

    input[type="text"] {
        width: 100%;
        border-radius: 5px;
        margin-bottom: 10px;
    }

    button {
        width: 100%;
        border-radius: 5px;
    }

    .forecast-day {
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
    }
}

    </style>
  </head>

  <body>
    <header>
      <header>
        <h1>Weather App</h1>
        <div class="search-box">
          <form action="./weather" method="post">
          <input type="text" placeholder="Enter city" name="location" />
          <button type="submit">Search</button>
          </form>
        </div>
      </header>
    </header>

    <main>
      <div class="weather-card">
        <div class="location">
          <h2>{{name}}, {{country}}</h2>
          <p>{{time}}</p>
        </div>
        <div class="temperature">
          <img src="{{icon}}" alt="Weather Icon" />
          <h1>{{temp}}°C</h1>
        </div>
        <div class="description">
          <p>{{weather}}</p>
        </div>
      </div>

      <div class="forecast">
        <h2>7-Day Forecast</h2>
        <div class="forecast-day">
          <p>Day 1</p>
          <img src="sun-icon.png" alt="Weather Icon" />
          <p>28°C</p>
        </div>
        <div class="forecast-day">
          <p>Day 2</p>
          <img src="cloud-icon.png" alt="Weather Icon" />
          <p>22°C</p>
        </div>
        <!-- Repeat for other days -->
      </div>
    </main>
  </body>
  <script src="./../../public/js/script.js"></script>
</html>


     